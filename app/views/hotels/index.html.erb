  <a href="/google_maps/thai"> google-map(タイ)</a>
<% elsif @country.name =="カンボジア"%>
  <a href="/google_maps/cambo"> google-map(カンボジア)</a>
  <% elsif @country.name =="ベトナム"%>
  <a href="/google_maps/vet"> google-map(ベトナム)</a>
  <% elsif @country.name =="マレーシア"%>
  <a href="/google_maps/malaysia"> google-map(マレーシア)</a>
  <% elsif @country.name =="シンガポール"%>
  <a href="/google_maps/singapore"> google-map(シンガポール)</a>
<%end%>
